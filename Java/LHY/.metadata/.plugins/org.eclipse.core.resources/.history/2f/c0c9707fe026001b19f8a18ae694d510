package workIn1115;

public class DivideBy2 {

	public static void main(String[] args) {

		
		int num1 = 30 ; 
		int x = num1 ;
		int count = 0 ;
		 while (x>0)
		 {
			 if(x%2 == 0) {
				 count++;
				 x=x/2;
			 }
			 else x=x/2;
			 System.out.println(x+" "+count);
			}
		 System.out.println(count);
	}
	

}
